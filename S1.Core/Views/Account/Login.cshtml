@model S1.Core.Models.LoginViewModel
@inject IStringLocalizer<SharedResources> Localizer
@using MES.Shared.Resources
@using System.ComponentModel.DataAnnotations
@using System.Reflection
@using Microsoft.Extensions.Localization

@{
    ViewData["Title"] = Localizer["Login"];
    ViewData["Page"] = "login";
}

<div class="position-relative min-vh-100 overflow-hidden p-4">
    <!-- Overlay -->
    <div class="login-bg-overlay"></div>

    <!-- Content -->
    <div class="login-bg-content">
        <!-- Logo -->
        <div class="my-4 text-center">
            <img src="/images/logo.svg" alt="Logo" class="login-logo" />
        </div>
    </div>

    <div class="login-bg-content mt-4">
        <!-- Login Form -->
        <div class="bg-white rounded-4 shadow p-4 login-form-wrapper">
            <h2 class="login-text fw-bold mb-2">@Localizer["Login"]</h2>

            <form asp-action="Login" method="post" onsubmit="showLoading()">
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label login-text"></label>
                    <input asp-for="Email" class="form-control" type="text" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label login-text"></label>
                    <div class="input-group">
                        <input asp-for="Password" id="PasswordInput" class="form-control" autocomplete="off" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility('PasswordInput', this)">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label login-text"></label>
                </div>

                <br />
                <button type="submit" class="btn btn-demo-submit">@Localizer["Button_Login_Submit"]</button>

                <div class="mt-3">
                    <a asp-controller="Account" asp-action="ForgetPassword" asp-route-returnUrl="/Account/ForgetPasswordSuccess" asp-route-backUrl="/Account/Login">
                        @Localizer["Forget_Password"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>